{
  "parser": "typescript",
  "bracketSpacing": true,
  "printWidth": 100,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 4,
  "useTabs": false,
  "trailingComma": "none",
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": ".prettierrc",
      "options": { "parser": "json", "tabWidth": 2 }
    },
    {
      "files": "*.json",
      "options": { "parser": "json", "tabWidth": 2, "printWidth": 120 }
    }
  ]
}
